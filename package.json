{
  "private": true,
  "license": "MIT",
  "homepage": "https://unified-doc.netlify.com",
  "repository": "unified-doc/unified-doc",
  "bugs": "https://github.com/unified-doc/unified-doc/issues",
  "workspaces": [
    "packages/*"
  ],
  "author": "Chris Zhou <chrisrzhou@pm.me>",
  "scripts": {
    "build": "yarn clean; yarn workspaces run build",
    "clean": "rm -rf packages/**/node_modules",
    "cypress:open": "cypress open",
    "lint": "xo --fix; tsc",
    "test": "jest --watch",
    "test:run": "jest; cypress run"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.6",
    "babel-jest": "^26.0.1",
    "cypress": "^4.6.0",
    "eslint-plugin-cypress": "^2.11.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "microbundle": "^0.12.0",
    "typescript": "^3.8.3",
    "xo": "^0.30.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn format && yarn test:run && yarn build"
    }
  },
  "jest": {
    "testPathIgnorePatterns": ["cypress"]
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "trailingComma": "all",
    "useTabs": false
  },
  "xo": {
    "env": [
      "browser",
      "cypress/globals",
      "jest"
    ],
    "plugins": [
      "cypress"
    ],
    "prettier": true,
    "rules": {
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        { "argsIgnorePattern": "^_" }
      ],
      "no-warning-comments": "off",
      "padding-line-between-statements": "off"
    }
  }
}
