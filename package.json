{
  "private": true,
  "name": "unified-doc",
  "license": "MIT",
  "homepage": "https://unified-doc.netlify.com",
  "repository": "unified-doc/unified-doc",
  "bugs": "https://github.com/unified-doc/unified-doc/issues",
  "author": "Chris Zhou <chrisrzhou@pm.me>",
  "scripts": {
    "build": "lerna exec --parallel microbundle",
    "clean": "lerna exec --parallel 'rm -rf dist node_modules'",
    "dev": "lerna exec --parallel microbundle watch",
    "lint": "xo --fix; tsc",
    "test": "cypress open",
    "test:run": "cypress run"
  },
  "dependencies": {
    "unified-doc": "file:packages/unified-doc",
    "unified-doc-parse-text": "file:packages/unified-doc-parse-text"
  },
  "devDependencies": {
    "cypress": "^4.7.0",
    "eslint-plugin-cypress": "^2.11.1",
    "husky": "^4.2.5",
    "lerna": "^3.22.0",
    "microbundle": "^0.12.0",
    "react": "^16.13.1",
    "rehype-react": "^5.0.1",
    "rehype-toc": "^3.0.1",
    "typescript": "^3.8.3",
    "xo": "^0.30.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint; npm run clean; npm run build; npm run test:run"
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "trailingComma": "all",
    "useTabs": false
  },
  "xo": {
    "env": [
      "browser",
      "cypress/globals"
    ],
    "plugins": [
      "cypress"
    ],
    "prettier": true,
    "rules": {
      "@typescript-eslint/prefer-readonly-parameter-types": "off",
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-warning-comments": "off",
      "padding-line-between-statements": "off"
    }
  }
}
