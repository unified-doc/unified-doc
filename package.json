{
  "name": "unified-doc",
  "private": true,
  "license": "MIT",
  "homepage": "https://unified-doc.netlify.com",
  "repository": "unified-doc/unified-doc",
  "bugs": "https://github.com/unified-doc/unified-doc/issues",
  "workspaces": [
    "packages/*"
  ],
  "author": "Chris Zhou <chrisrzhou@pm.me>",
  "scripts": {
    "build": "lerna exec --parallel microbundle",
    "clean": "lerna exec --parallel 'rm -rf dist node_modules'",
    "lint": "xo --fix; tsc",
    "start": "lerna exec --parallel microbundle watch",
    "dev": "cypress open",
    "test": "cypress run"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "babel-jest": "^26.0.1",
    "cypress": "^4.7.0",
    "eslint-plugin-cypress": "^2.11.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.22.0",
    "microbundle": "^0.12.0",
    "react": "^16.13.1",
    "rehype-react": "^5.0.1",
    "rehype-toc": "^3.0.1",
    "typescript": "^3.8.3",
    "xo": "^0.30.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "echo;"
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "cypress"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "trailingComma": "all",
    "useTabs": false
  },
  "xo": {
    "env": [
      "browser",
      "cypress/globals",
      "jest"
    ],
    "plugins": [
      "cypress"
    ],
    "prettier": true,
    "rules": {
      "capitalized-comments": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-warning-comments": "off",
      "padding-line-between-statements": "off"
    }
  },
  "dependencies": {
    "unified-doc": "file:packages/unified-doc",
    "unified-doc-parse-text": "file:packages/unified-doc-parse-text"
  }
}
