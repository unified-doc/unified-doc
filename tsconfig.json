{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "lib": ["dom", "es6"],
    "noEmit": true,
    "paths": {
      "~/*": ["./*"],
    },
    "resolveJsonModule": true,
    "types": ["cypress", "node"]
  },
  "exclude": ["**/dist", "**/node_modules"]
}
